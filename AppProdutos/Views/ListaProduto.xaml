<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProdutos.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" />
        <ToolbarItem Text="Adicionar"  Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    
    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" Placeholder="Busca de Produtos" />
        <ListView x:Name="lst_produtos"> 
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *, *, *, *">
                    <Label Grid.Column="0" Text="Id"/>
                    <Label Grid.Column="0" Text="Descrição"/>
                    <Label Grid.Column="0" Text="Preço"/>
                    <Label Grid.Column="0" Text="Qnt"/>
                    <Label Grid.Column="0" Text="Total"/>

                   </Grid>
                 </ListView.Header>
                 <ListView.ItemTemplate>
                  <ListView.ItemTemplate>
                      <DataTemplate>
                          <ViewCell>
                              
                          </ViewCell> 
                        </DataTemplate>
                    </ListView.ItemTemplate>
           </ListView>
    </VerticalStackLayout>
</ContentPage>